<%- include('partials/header'); -%>
<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
    <label>Title</label>
    <input name="postTitle" class="form-control" type="text"></input>
    <label>Author</label>
    <input name="postAuthor" class="form-control" type="text"></input>
    <label>Post</label>
    <textarea class="form-control" name="postBody" cols="30" rows="5"></textarea>
    </div>
    <button type="submit" class="btn btn-primary" name="button">Publish</button>
</form>
<%- include('partials/footer'); -%>